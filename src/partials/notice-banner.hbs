{{#if page.attributes.notice-banner-message}}
<div class="notice-banner">
  <p>{{page.attributes.notice-banner-message}}</p>
</div>
{{else}}
  {{#with page.componentVersion.asciidoc.attributes}}
    {{#if (or this.endOfLife (or this.noLongerUpdated this.olderVersion))}}
    <div class="notice-banner">
      {{#if this.endOfLife}}
      <p>This version of the product has reached 
        <a class="notice-banner-link" 
          href="https://www.mulesoft.com/legal/versioning-back-support-policy"
          target="_blank" rel="noopener noreferrer">End of Life</a>
        and is no longer supported.
      </p>
      {{else}}
      <p>
        {{#if this.noLongerUpdated}}
        We are no longer updating this version of the documentation.
        {{else}}
          {{#if this.olderVersion}}
          Youâ€™re viewing an older version of the documentation.
          {{/if}}
        {{/if}}
        You can switch to the
        <a 
          class="notice-banner-link"
          href="{{site.url}}{{page.latest.url}}">latest version</a>, 
        or use the version selector in the left navigation.
      </p>
      {{/if}}
    </div>
    {{/if}}
  {{/with}}
{{/if}}